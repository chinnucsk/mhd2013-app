@import 'nib'

body
  background: url('/img/bg.gif')
  font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif

.event
  float: left
  margin: 25px
  width: 150px
  img
    width: 100%
    height: 150px
  p
    width: 100%
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
  button
    background: url('/img/create_playlist.png') no-repeat
    width: 100%
    height: 50px
    border: none


.border-bottom
  border-bottom: 1px solid #272727

